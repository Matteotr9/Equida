{# templates/vente/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des ventes</h1>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Date debut</th>
                <th>Date fin</th>
                <th>Categorie de Vente</th>
            </tr>
        </thead>
        <tbody>
            {% for vente in ventes %}
                <tr>
                    <td>{{ vente.nom }}</td>
                    <td>{{ vente.dateDebut|date('d/m/Y') }}</td>
                    <td>{{ vente.dateFin|date('d/m/Y') }}</td>

                   
                    <td>{{ vente.categorieDeVente.libelle }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}